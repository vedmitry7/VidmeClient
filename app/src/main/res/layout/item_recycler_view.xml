<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_16dp"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="@dimen/padding_16dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@android:color/black"
            android:alpha="0.87"
            android:layout_toLeftOf="@+id/likesContainer"
            android:layout_toStartOf="@+id/likesContainer" />

        <RelativeLayout
            android:id="@+id/likesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
            <TextView
                android:textColor="@android:color/black"
                android:alpha="0.87"
                android:id="@+id/likesQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:paddingRight="@dimen/padding_6dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:alpha="0.87"
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/likesQuantity"
                android:textSize="@dimen/text_size_16sp"
                android:text="@string/likes"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>